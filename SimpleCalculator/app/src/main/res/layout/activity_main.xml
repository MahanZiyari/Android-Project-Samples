<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_gray_800"
    android:padding="10dp"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="expression"
        android:textColorHint="?attr/colorSecondary"
        app:boxStrokeColor="@color/blue_800"
        app:hintTextColor="@color/blue_800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="35dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outlinedTextField">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:text="1"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:text="2"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button3"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:text="3"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:text="4"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button5"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:text="5"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button6"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:text="6"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:text="7"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button8"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:text="8"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button9"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:shadowDx="5"
                android:shadowDy="6"
                android:text="9"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button0"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:text="0"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/dot_button"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:text="."
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/equal_button"
                android:layout_width="@dimen/number_button_width"
                android:layout_height="@dimen/number_button_height"
                android:layout_weight="1"
                android:shadowDx="5"
                android:shadowDy="6"
                android:text="="
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/outlinedTextField">

        <Button
            android:id="@+id/backspace_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/operator_button_height"
            app:icon="@drawable/ic_backspace_black_24dp"
            app:iconGravity="textEnd"
            app:iconSize="30dp"
            app:iconTint="@color/blue_800" />

        <Button
            android:id="@+id/divide_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/operator_button_height"
            app:icon="@drawable/ic_divide"
            app:iconGravity="textEnd"
            app:iconSize="20dp"
            app:iconTint="@color/blue_800" />

        <Button
            android:id="@+id/multiply_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/operator_button_height"
            android:text="X"
            android:textColor="@color/blue_800"
            android:textSize="20sp" />

        <Button
            android:id="@+id/minus_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/operator_button_height"
            android:text="-"
            android:textColor="@color/blue_800"
            android:textSize="45sp" />

        <Button
            android:id="@+id/plus_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/operator_button_height"
            android:text="+"
            android:textColor="@color/blue_800"
            android:textSize="30sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>